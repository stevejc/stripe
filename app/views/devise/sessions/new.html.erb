<div class="col-md-4 col-md-offset-4 well signin">
  <h2>Sign in</h2>

  <%= form_for(resource, builder: LargeFormBuilder, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.email_field :email, gicon: "user", class: 'form-control input-lg', placeholder: 'Email', autofocus: true %>
    <%= f.password_field :password, gicon: "lock", class: 'form-control input-lg', placeholder: 'Password' %>
    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <%= f.check_box :remember_me %> &nbsp; <%= f.label :remember_me %>
      </div>
    <% end %>
    <%= f.submit "Sign in", class: 'btn btn-primary btn-block btn-lg' %>
  <% end %>

  <%= flash_messages layout_flash: false %>

  <%= render "devise/shared/links" %>
</div>
