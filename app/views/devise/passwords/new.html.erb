<div class="col-md-5 col-md-offset-3 well signin">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, builder: LargeFormBuilder, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

    <%= f.email_field :email, gicon: "user", class: 'form-control input-lg col-sm-12', placeholder: 'Email', autofocus: true %>
    <%= f.submit "Send me reset password instructions", class: 'btn btn-primary btn-block btn-lg' %>
  <% end %>

  <%= flash_messages layout_flash: false %>

  <%= render "devise/shared/links" %>
</div>
